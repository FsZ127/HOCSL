<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="2dp" />
    <size android:height="400dp" android:width="400dp"/>
    <gradient
        android:angle="90"
        android:centerColor="#44000000"
        android:centerX="35%"
        android:endColor="#44101010"
        android:startColor="#44101010"
        android:type="linear" />
    <padding
        android:bottom="5dp"
        android:left="10dp"
        android:right="10dp"
        android:top="5dp" />

    <stroke
        android:width="1dp"
        android:color="@color/colorDialogBorder" />
</shape>