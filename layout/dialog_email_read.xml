<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/remote_connection_window">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView12"
        android:background="@color/transparent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:columnCount="4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tit_from"
                android:id="@+id/textView124"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="12dp"
                android:textColor="@color/colorText"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@color/transparent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/msg_from"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:textSize="12dp"
                    android:textColor="@color/btnSelected"
                    android:layout_marginRight="5dp"
                    android:text="FROM" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:id="@+id/img_reply"
                    android:src="@android:drawable/ic_menu_revert"
                    android:layout_marginLeft="5dp"
                    android:background="@color/transparent" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tit_date"
                android:id="@+id/textView129"
                android:layout_row="0"
                android:layout_column="2"
                android:textSize="12dp"
                android:textColor="@color/colorText"
                android:layout_marginLeft="35dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/msg_date"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_gravity="fill_horizontal"
                android:textSize="12dp"
                android:textColor="@color/btnSelected"
                android:text="DATE"
                android:layout_marginLeft="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/tit_subject"
                android:id="@+id/textView125"
                android:layout_row="1"
                android:layout_column="0"
                android:textSize="12dp"
                android:textColor="@color/colorText"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/msg_subject"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="12dp"
                android:textColor="@color/btnSelected"
                android:layout_marginRight="5dp"
                android:text="SUB"
                android:layout_columnSpan="3" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="4"
                android:layout_marginBottom="5dp"
                android:id="@+id/attachment_area">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/tit_attachment"
                    android:id="@+id/textView127"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:textSize="12dp"
                    android:textColor="@color/colorText"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/msg_attachment"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:textSize="12dp"
                    android:textColor="@color/btnSelected"
                    android:layout_marginRight="5dp"
                    android:text="attacment"
                    android:layout_columnSpan="2"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img_download"
                    android:src="@mipmap/download"
                    android:tint="@color/btnSelected" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/_message"
                android:id="@+id/textView126"
                android:layout_row="4"
                android:layout_column="0"
                android:textSize="12dp"
                android:textColor="@color/colorText"
                android:layout_gravity="top"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/msg_msg"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_gravity="fill_horizontal"
                android:textSize="12dp"
                android:textColor="@color/btnSelected"
                android:layout_marginRight="5dp"
                android:text="MSG"
                android:layout_columnSpan="3"
                android:background="@drawable/remote_connection_window" />

        </GridLayout>
    </ScrollView>
</LinearLayout>