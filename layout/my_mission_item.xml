<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:id="@+id/row">

    <ImageView
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:id="@+id/mission_icon"
        android:layout_marginRight="5dp"
        android:src="@mipmap/trace" />

    <TextView
        style="@style/TextEditStyleValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/mission_i__title"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:textSize="10dp"
        android:layout_weight="1"
        android:textColor="@color/btnSelected" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="50000 HC"
        android:id="@+id/mission_i_payout"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:textSize="10dp"
        android:textColor="@color/colorText" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Very Hard"
        android:id="@+id/mission_rep"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:textSize="10dp"
        android:textColor="@color/colorText" />

    <TextView
        style="@style/TextEditStyleValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Unknown"
        android:id="@+id/mission_by"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:textSize="9dp"
        android:textColor="@color/colorTextWarning" />

    <TextView
        style="@style/TextEditStyleValue"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:id="@+id/mission_timelimit"
        android:textStyle="bold"
        android:layout_gravity="center_vertical"
        android:textSize="10dp"
        android:textColor="@color/btnSelected" />

</LinearLayout>