<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/transparent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:layout_gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bounce_add"
            android:src="@android:drawable/ic_media_rew"
            android:tint="@color/colorValueText"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000.000.000.000"
            android:id="@+id/list_ip"
            android:background="@color/transparent"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target"
            android:id="@+id/list_target_name"
            android:background="@color/transparent"
            android:textColor="@color/colorValueText"
            android:textSize="11dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target"
            android:id="@+id/list_target_risk"
            android:background="@color/transparent"
            android:textColor="@color/colorTextWarning"
            android:textSize="10dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>

</LinearLayout>