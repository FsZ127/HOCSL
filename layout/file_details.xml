<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/remote_connection_window">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/fi_icon"
            android:background="@color/transparent"
            android:layout_marginTop="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/transparent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tit_file_name"
                    android:id="@+id/textView52"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:background="@color/transparent" />

                <TextView
                    style="@style/TextEditStyleValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fi_file_name"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:background="@color/transparent"
                    android:textColor="@color/btnSelected" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/fi_copy_file"
                    android:src="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
                    android:tint="@color/colorValueText"
                    android:background="@color/transparent"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tit_file_size"
                    android:id="@+id/textView53"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:background="@color/transparent" />

                <TextView
                    style="@style/TextEditStyleValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fi_file_size"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:background="@color/transparent"
                    android:textColor="@color/btnSelected" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:id="@+id/fi_local_origin">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tit_origin"
                    android:id="@+id/textView55"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:background="@color/transparent" />

                <TextView
                    style="@style/TextEditStyleValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/fi_file_origin"
                    android:layout_gravity="center_vertical"
                    android:textSize="10dp"
                    android:background="@color/transparent"
                    android:textColor="@color/btnSelected" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/fi_copy_target"
                    android:src="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
                    android:tint="@color/colorValueText"
                    android:background="@color/transparent"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/fi_close"
            android:background="@color/transparent"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:background="@drawable/tools_style">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:padding="3dp"
            android:background="@color/transparent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_open_file"
                android:id="@+id/fi_btn_open" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/fe_save"
                android:src="@android:drawable/ic_menu_save"
                android:tint="@color/colorValueText"
                android:background="@color/transparent"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fi_decode"
                android:src="@android:drawable/ic_lock_idle_lock"
                android:tint="@color/bronze"
                android:background="@color/transparent"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/fi_copy"
                android:src="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
                android:tint="@color/colorValueText"
                android:background="@color/transparent"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/fi_rename"
                android:src="@android:drawable/ic_menu_edit"
                android:tint="@color/colorValueText"
                android:background="@color/transparent"
                android:layout_marginLeft="10dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/fi_delete"
                android:src="@android:drawable/ic_menu_delete"
                android:tint="@color/colorTextWarning"
                android:background="@color/transparent"
                android:layout_marginLeft="10dp" />

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/frame_decrypt"
        android:background="@drawable/remote_connection_window"
        android:gravity="center_vertical"
        android:visibility="visible">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txt_decryption"
            android:layout_weight="1"
            android:hint="@string/txt_enter_decryption_key" />

        <ImageView
            android:id="@+id/fi_dec_paste"
            android:src="@mipmap/icon_paste"
            android:tint="@color/colorValueText"
            android:background="@color/transparent"
            android:layout_marginLeft="-70dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/fi_dec_qr"
            android:src="@mipmap/icon_qr"
            android:tint="@color/colorValueText"
            android:background="@color/transparent"
            android:layout_marginLeft="0dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <Button
            android:text="@string/txt_decrypt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fi_btn_decrypt"
            android:layout_marginLeft="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/fi_progress_text"
            android:textSize="10dp"
            android:layout_marginRight="5dp" />

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/file_progress"
            android:layout_gravity="center_horizontal"
            android:progressTint="@color/btnSelected"
            android:max="100"
            android:background="@color/transparent"
            android:progress="50"
            android:visibility="invisible" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView5"
        android:background="@drawable/tools_style" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:gravity="center">

            <eu.livotov.labs.android.camview.ScannerLiveView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/fi_qr_preview"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fi_content" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/fi_content_edit"
                android:background="@color/EditableTextArea" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_execute"
                android:id="@+id/fi_execute" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>