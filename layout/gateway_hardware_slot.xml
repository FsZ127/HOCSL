<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/remote_connection_window">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_empty_slot"
        android:id="@+id/hardware_name"
        style="@style/textHardwareName"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="13dp"
        android:gravity="center"
        android:layout_weight="1" />

    <Button
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_add_hardware"
        android:id="@+id/btn_add_hardware" />

</LinearLayout>