<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/remote_connection_window">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:columnCount="2"
        android:rowCount="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tit_member_name"
            android:id="@+id/app_input_prompt"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app_input_data"
            android:layout_row="1"
            android:layout_column="0" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/img_paste"
            android:src="@drawable/abc_ic_menu_paste_mtrl_am_alpha"
            android:tint="@color/colorValueText"
            android:background="@color/transparent"
            android:clickable="true"
            android:layout_marginLeft="-35dp"
            android:layout_row="1"
            android:layout_column="1" />

    </GridLayout>
</LinearLayout>